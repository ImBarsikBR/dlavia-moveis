<ComissaoApp>:
    orientation: 'vertical'
    padding: 30
    spacing: 20

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Calculadora de Comissão"
        font_size: '24sp'
        color: 0, 0, 0, 1
        bold: True
        size_hint_y: None
        height: self.texture_size[1]

    TextInput:
        id: entrada_valor
        hint_text: "Digite o valor da venda"
        font_size: '18sp'
        multiline: False
        input_filter: 'float'
        size_hint_y: None
        height: 50
        background_color: 1, 1, 1, 1
        foreground_color: 0, 0, 0, 1
        cursor_color: 0, 0, 0, 1

    Button:
        text: "Calcular Comissão"
        font_size: '18sp'
        size_hint_y: None
        height: 50
        background_color: 0.2, 0.6, 1, 1
        color: 1, 1, 1, 1
        on_press: root.calcular()

    Label:
        id: resultado
        text: ""
        font_size: '20sp'
        color: 0.2, 0.5, 0.2, 1 